{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"noEmit": true,
		"moduleResolution": "node",
		"rootDir": "src",
		"inlineSourceMap": true,
		"inlineSources": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": "src",
		"paths": {
			"*": ["types/*", "./*"],
		},
	},
	"include": ["src/**/*"],
}
